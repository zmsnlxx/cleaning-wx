.holiday-report {
  min-height: 100vh;
  background: #EFEFEF;
}
.holiday-report .time-pick {
  height: 54px;
  line-height: 54px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 24px;
  box-sizing: border-box;
}
.holiday-report .time-pick .time {
  color: #000000;
  font-size: 16px;
}
.holiday-report .time-pick .pick {
  color: #259D8F;
  font-size: 16px;
  display: flex;
  align-items: center;
}
.holiday-report .time-pick .pick .van-icon {
  margin-right: 3px;
}
.holiday-report .van-cell {
  height: 52px;
  padding: var(--cell-vertical-padding, 10px) 24px;
}
.holiday-report .content {
  padding: 15px 24px;
  box-sizing: border-box;
}
.holiday-report .content .van-image {
  width: 100%;
  height: 155px;
}
.holiday-report .content .van-image .van-image__img {
  border-radius: 4px;
}
.holiday-report .content .sign-num {
  width: 100%;
  height: 67px;
  margin: 15px 0;
  background: #EEFFF9;
  border-radius: 4px;
  border: 1px solid #259D8F;
  line-height: 67px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.holiday-report .content .sign-num .text {
  color: #000000;
  font-size: 14px;
  margin-right: 40px;
}
.holiday-report .content .sign-num .num {
  color: #259D8F;
  font-size: 20px;
}
.holiday-report .content .sign-box .item {
  width: 100%;
  height: 60px;
  background: #FFFFFF;
  padding: 0 24px;
  line-height: 60px;
  display: flex;
  box-sizing: border-box;
  color: #000000;
  font-size: 14px;
}
.holiday-report .content .sign-box .item .list {
  width: 33%;
  height: 100%;
}
.holiday-report .content .sign-box .item .time .title {
  color: #999999;
  font-size: 12px;
  line-height: 30px;
}
.holiday-report .content .sign-box .item .time .value {
  line-height: 30px;
  font-size: 14px;
}
.holiday-report .content .sign-box .item .name {
  font-weight: 600;
}
