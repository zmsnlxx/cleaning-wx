.add-report {
  min-height: 100vh;
  background: #EFEFEF;
  position: relative;
}
.add-report .van-cell {
  height: 56px;
}
.add-report .content .title {
  height: 52px;
  line-height: 52px;
  padding: 0 16px;
  display: flex;
  justify-content: space-between;
  color: #000000;
  font-size: 16px;
  font-weight: 600;
}
.add-report .content .title .add {
  color: #259D8F;
}
.add-report .content .list {
  margin-bottom: 8px;
  background: #FFFFFF;
  padding: 16px;
  width: 100%;
  box-sizing: border-box;
}
.add-report .content .list textarea {
  padding: 10px 16px;
  width: calc(100% - 32px);
}
.add-report .content .list .list-item {
  padding: 16px 0;
  width: 100%;
}
.add-report .content .list .list-item .list-title {
  color: #6D6C6D;
  font-size: 14px;
  margin-bottom: 8px;
}
.add-report .content .list .list-item .flex {
  display: flex;
  justify-content: space-between;
}
.add-report .footer {
  padding: 20px 16px;
  display: flex;
  justify-content: space-between;
}
.add-report .footer .plain {
  margin-right: 10px;
  width: 80px;
  height: 42px;
}
.add-report .footer .plain button {
  width: 100%;
  height: 100%;
}
.add-report .footer .btn {
  width: calc(100% - 90px);
  height: 42px;
}
.add-report .footer .btn button {
  width: 100%;
  height: 100%;
}
.add-report .dialog {
  width: 100%;
  height: 100px;
  line-height: 100px;
  text-align: center;
}
