.holiday {
  background: #EFEFEF;
  min-height: calc(100vh - 80px);
  width: 100%;
}
.holiday .header {
  width: 100%;
  height: 118px;
  background: #FFFFFF;
  padding: 18px 24px 0 24px;
  box-sizing: border-box;
}
.holiday .header .btn button {
  color: #259D8F;
  background: #EEFFF9;
  border-radius: 2px;
  border: 2px solid #259D8F;
  width: 100%;
  height: 50px;
}
.holiday .header .van-sticky {
  height: 50px;
}
.holiday .header .van-tab--active {
  color: #259D8F;
}
.holiday .list {
  padding: 24px 16px;
  box-sizing: border-box;
}
.holiday .list .box {
  margin-bottom: 80px;
}
.holiday .list .box .card {
  width: 100%;
  border-radius: 2px;
  display: flex;
  background: #FFFFFF;
  margin-bottom: 8px;
}
.holiday .list .box .card .content {
  width: calc(100% - 34px);
  font-weight: 400;
  font-size: 14px;
  line-height: 20px;
  color: #999999;
  padding: 16px;
  box-sizing: border-box;
}
.holiday .list .box .card .content .title {
  color: #000000;
  margin-bottom: 16px;
}
.holiday .list .box .card .content .reason {
  margin-top: 8px;
  background: rgba(222, 103, 86, 0.16);
  color: #DE6756;
  padding: 3px 8px;
  font-size: 12px;
  display: inline-block;
}
.holiday .list .box .card .type {
  width: 34px;
  color: #FFFFFF;
  font-size: 14px;
  border-radius: 0 2px 2px 0;
  margin: 0 auto;
  text-align: center;
  position: relative;
}
.holiday .list .box .card .type .text {
  display: inline-block;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  letter-spacing: 3px;
  color: #fff;
  -webkit-writing-mode: vertical-lr;
  -ms-writing-mode: lr-tb;
  writing-mode: vertical-lr;
}
.holiday .list .box .card .success {
  background: #259D8F;
}
.holiday .list .box .card .error {
  background: #DE6756;
}
.holiday .list .box .card .pending {
  background: #BEBEBE;
}
