.clean-detail {
  min-height: 100vh;
  background: #EFEFEF;
  box-sizing: border-box;
}
.clean-detail .cleanName {
  height: 54px;
  line-height: 54px;
  color: #000000;
  font-weight: 600;
}
.clean-detail .content {
  padding: 0 16px;
  box-sizing: border-box;
}
.clean-detail .content .van-image {
  width: 100%;
  height: 155px;
  margin-bottom: 15px;
}
.clean-detail .content .van-image .van-image__img {
  border-radius: 4px;
}
.clean-detail .content .card {
  width: 100%;
  height: 80px;
  background: #FFFFFF;
  border-radius: 4px;
  padding: 16px;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 8px;
}
.clean-detail .content .card .item {
  width: 50%;
  text-align: center;
  font-size: 14px;
  line-height: 24px;
  display: flex;
}
.clean-detail .content .card .item .label {
  color: #BEBEBE;
  margin-right: 16px;
  min-width: 70px;
}
.clean-detail .content .card .item .value {
  color: #000000;
}
.clean-detail .content .card .item .wanring {
  color: #F4BD3A;
}
