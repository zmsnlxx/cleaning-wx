.inspection-report {
  min-height: 100vh;
  background: #EFEFEF;
  padding-bottom: 20px;
  box-sizing: border-box;
}
.inspection-report .header {
  height: 50px;
  background: #259D8F;
}
.inspection-report .header .van-sticky {
  height: 50px;
}
.inspection-report .header .van-sticky .van-tabs__nav {
  background: #259D8F;
}
.inspection-report .header .van-sticky .van-tabs__nav .van-tab {
  color: #FFFFFF;
}
.inspection-report .month-box .time-pick {
  height: 54px;
  line-height: 54px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 24px;
  box-sizing: border-box;
}
.inspection-report .month-box .time-pick .time-box {
  width: calc(50% - 10px);
  display: flex;
  justify-content: center;
}
.inspection-report .month-box .time-pick .time-box .time {
  margin-right: 10px;
}
.inspection-report .month-box .time-pick .line {
  width: 20px;
  color: #259D8F;
}
.inspection-report .month-box .van-cell {
  height: 52px;
  margin-bottom: 15px;
}
.inspection-report .month-box .chart {
  height: 300px;
  background: #FFFFFF;
}
.inspection-report .day-box .time-pick {
  height: 54px;
  line-height: 54px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 24px;
  box-sizing: border-box;
}
.inspection-report .day-box .time-pick .time {
  color: #000000;
  font-size: 16px;
}
.inspection-report .day-box .time-pick .pick {
  color: #259D8F;
  font-size: 16px;
  display: flex;
  align-items: center;
}
.inspection-report .day-box .time-pick .pick .van-icon {
  margin-right: 3px;
}
.inspection-report .day-box .day-content {
  padding: 0 16px;
  box-sizing: border-box;
}
.inspection-report .day-box .day-content .card {
  width: 100%;
  height: 80px;
  background: #FFFFFF;
  border-radius: 4px;
  padding: 16px;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 8px;
}
.inspection-report .day-box .day-content .card .item {
  width: 50%;
  text-align: center;
  font-size: 14px;
  line-height: 24px;
  display: flex;
}
.inspection-report .day-box .day-content .card .item .label {
  color: #BEBEBE;
  margin-right: 16px;
  min-width: 70px;
}
.inspection-report .day-box .day-content .card .item .value {
  color: #000000;
}
.inspection-report .day-box .day-content .card .item .wanring {
  color: #F4BD3A;
}
