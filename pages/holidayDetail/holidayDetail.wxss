.holiday-detail {
  min-height: 100vh;
  background: #EFEFEF;
}
.holiday-detail .van-cell {
  height: 50px;
  font-weight: 400;
}
.holiday-detail .van-cell .van-cell__title {
  color: #6D6C6D;
}
.holiday-detail .van-cell .van-cell__value {
  color: #000000;
}
.holiday-detail .text {
  background: #FFFFFF;
  padding: 0 12px 12px;
  font-size: 14px;
  color: #000000;
  font-weight: 400;
  line-height: 20px;
}
.holiday-detail .footer {
  width: calc(100% - 48px);
  height: 42px;
  position: fixed;
  bottom: 30px;
  left: 24px;
}
.holiday-detail .footer .is-approve {
  display: flex;
}
.holiday-detail .footer .is-approve .btn {
  width: calc(50% - 8px);
  height: 42px;
}
.holiday-detail .footer .is-approve .btn button {
  width: 100%;
  height: 100%;
}
.holiday-detail .footer .is-approve .btn:first-child {
  margin-right: 16px;
}
.holiday-detail .footer .button {
  width: 100%;
  height: 42px;
}
.holiday-detail .footer .button button {
  width: 100%;
  height: 100%;
}
.holiday-detail .popup-content {
  width: 100%;
  background: #FFFFFF;
  border-radius: 4px;
  padding: 16px;
  box-sizing: border-box;
  position: relative;
}
.holiday-detail .popup-content .title {
  display: flex;
  justify-content: space-between;
  color: #000000;
  font-weight: 600;
  font-size: 16px;
  line-height: 22px;
}
.holiday-detail .popup-content .content {
  padding: 24px 14px;
  box-sizing: border-box;
}
.holiday-detail .popup-content .content .desc {
  color: #000000;
  font-size: 14px;
  line-height: 20px;
  font-weight: 400;
  margin-bottom: 8px;
}
.holiday-detail .popup-content .content .textarea {
  min-height: 78px;
  border: 1px solid #D8D8D8;
  border-radius: 2px;
  width: 100%;
  padding: 5px 12px;
  box-sizing: border-box;
}
.holiday-detail .popup-content .popup-footer {
  padding: 0 42px;
  display: flex;
}
.holiday-detail .popup-content .popup-footer .btn {
  width: calc(50% - 10px);
  height: 32px;
}
.holiday-detail .popup-content .popup-footer .btn button {
  width: 100%;
  height: 100%;
}
.holiday-detail .popup-content .popup-footer .btn:first-child {
  margin-right: 20px;
}
